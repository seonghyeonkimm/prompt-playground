// Add these hook entries to your ~/.claude/settings.json
// Adjust paths to match where you installed the prompt logger
{
  "hooks": {
    "SessionStart": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "bash /PATH/TO/budapest/hooks/on_session_start.sh"
          }
        ]
      }
    ],
    "UserPromptSubmit": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "bash /PATH/TO/budapest/hooks/on_prompt_submit.sh"
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "python3 /PATH/TO/budapest/hooks/on_stop.py"
          }
        ]
      }
    ],
    "SessionEnd": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "python3 /PATH/TO/budapest/hooks/on_session_end.py"
          }
        ]
      }
    ]
  },
  "mcpServers": {
    "prompt-logger": {
      "command": "node",
      "args": ["/PATH/TO/budapest/mcp-server/dist/index.js"],
      "env": {
        "PROMPT_LOGGER_DB": "/Users/YOUR_NAME/.claude-prompt-logger/db/prompt_logs.db"
      }
    }
  }
}
